<div class="form-row navbar-panel justify-content-between">
  <div class="col-md-auto">
    {{#link-to "books.create" class="btn btn-outline-primary my-2" title="Добавить книгу"}}
      <svg viewBox="0 0 16 16" class="bi bi-plus card-button" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
      </svg>
    {{/link-to}}
  </div>
  <div class="col-md-auto">
    <form class="form-inline">
      {{input class="form-control mr-2 search-long" value=searchBook type="search" placeholder="Найти по полям" aria-label="Найти по полям"}}
      <button onclick={{action "searchBook"}} class="btn btn-primary my-2">Найти</button>
    </form>
  </div>
  <div class="col-md-auto">
    <form class="form-inline">
      {{input class="form-control mr-2" type="search" value=searchBookByTag placeholder="Поиск по тегам" aria-label="Найти по тегам"}}
      <button onclick={{action "searchBookByTag"}}  class="btn btn-primary my-2">Поиск</button>
    </form>
  </div>
</div>
{{#if isLoading}}
  <div class="text-center">
    <img src="/images/loading.gif" alt="loading" />
  </div>
{{else}}
  <div class="row row-cols-1 row-cols-md-3 fix-margin">
    {{#each model as |book|}}
      <div class="col mb-4">
        <div class="card">
          {{book-item book=book coverURL=book.coverURL title=book.title author=book.author pages=book.pages rating=book.rating id=book.id deleteBook=(action "deleteBook")}}
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}
