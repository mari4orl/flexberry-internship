<form class="edit-form" onsubmit={{action "submitForm"}}>
  <div class="form-group row">
    <label for="inputTitle" class="col-sm-2 col-form-label text-right">Название</label>
    <div class="col-sm-10">
      {{input type="text" id="inputTitle" value=title class="form-control form-control-lg" placeholder="Полное название книги"}}
    </div>
  </div>

  <div class="form-group row">
    <label for="inputAuthor" class="col-sm-2 col-form-label text-right">Автор</label>
    <div class="col-sm-10">
      {{input type="text" id="inputAuthor" value=author class="form-control form-control-lg" placeholder="Полное название книги"}}
    </div>
  </div>

  <div class="form-group row">
    <label for="inputPagesCount" class="col-sm-2 col-form-label text-right">Объем</label>
    <div class="col-sm-10">
      {{input type="number" id="inputPagesCount" value=pages class="form-control form-control-lg" placeholder="Количество страниц книги"}}
    </div>
  </div>

  <div class="form-group row">
    <label for="inputDescriptionURL" class="col-sm-2 col-form-label text-right">Описание</label>
    <div class="col-sm-10">
      {{input type="url" value=descriptionURL class="form-control form-control-lg" id="inputDescriptionURL" placeholder="Ссылка на сайт с описанием книги"}}
    </div>
  </div>

  <div class="form-group row">
    <label for="customFile" class="col-sm-2 col-form-label text-right">Обложка</label>
    {{!-- {{input-file class="input-group input-group-lg col-sm-10" uploadData=uploadData uploadDataChanged=(action "changeUploadData")}} --}}
  </div>
  <div class="form-group row">
    <label for="inputTags" class="col-sm-2 col-form-label text-right">Теги</label>
    <div class="col-sm-10">
      {{input-tags tags=tags onChange=(action "changeTags")}}
    </div>
  </div>
  <div class="form-group row">
    <div class="col-12 text-right">
      <button type="submit" class="btn btn-primary btn-lg">Сохранить</button>
      {{#link-to "books.index" class="btn btn-outline-secondary btn-lg" }}Отмена{{/link-to}}
    </div>
  </div>
</form>
