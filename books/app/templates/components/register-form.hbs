<form onsubmit={{action "saveUser"}}>
  <img class="mb-4" src="images/logo-dark.png" alt="" height="57">
  <h1 class="h3 mb-3 fw-normal">Регистрация</h1>

  <div class="form-floating">
    {{input type="email" value=email class="form-control" id="floatingInput" placeholder="name@example.com"}}

    {{#each errors.email as |error|}}
      <span class="error-message">{{error.message}}</span>
    {{/each}}
  </div>

  <div class="form-floating">
    {{input type="text" value=username class="form-control" placeholder="Введите имя"}}

    {{#each errors.username  as |error|}}
      <span class="error-message">{{error.message}}</span>
    {{/each}}
  </div>

  <div class="form-floating">
    {{input type="password" value=password class="form-control" id="floatingPassword" placeholder="Пароль"}}

    {{#each errors.password as |error|}}
      <span class="error-message">{{error.message}}</span>
    {{/each}}
  </div>

  <button class="w-100 btn btn-lg btn-primary mb-3" type="submit">Зарегистрироваться</button>
  {{#link-to "index" class="w-100"}}Назад{{/link-to}}
</form>
